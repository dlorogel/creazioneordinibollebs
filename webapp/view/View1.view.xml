<mvc:View controllerName="it.orogel.crezioneordinibollebs.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <f:SimpleForm id="simpleForm" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="3" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                        <f:content>
                            <Label text="Carica File" labelFor="fileUploader"/>
                            <u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="upload/" fileType="txt" tooltip="Carica File da Locale" uploadComplete="handleUploadComplete" typeMissmatch=".onFailedType"/>
                            <Button text="{i18n>lbl.UploadFile}" type="Emphasized" icon="sap-icon://upload" press=".onUploadPress" width="200px"/>
                        </f:content>
                    </f:SimpleForm>
                    <VBox fitContainer="false" backgroundDesign="Transparent">
                        <t:Table id="Ordini" rows="{appModel>/rows}" selectionMode="None" visibleRowCountMode="Auto" ariaLabelledBy="title" enableCellFilter="true">
                            <t:rowSettingsTemplate>
                                <t:RowSettings highlight="{StatoOrdine}"/>
                            </t:rowSettingsTemplate>
                            <t:columns>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Flusso" sortProperty="Flusso">
                                    <Label text="{i18n>lbl.Flusso}"/>
                                    <t:template>
                                        <Text text="{Flusso}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="NumeroBolla" sortProperty="NumeroBolla">
                                    <Label text="{i18n>lbl.NumeroBolla}"/>
                                    <t:template>
                                        <Text text="{NumeroBolla}"/>
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="DataBolla" sortProperty="DataBolla">
                                    <Label text="{i18n>lbl.DataBolla}"/>
                                    <t:template>
                                        <Text  text ="{ path:'DataBolla', type:'sap.ui.model.type.Date', formatOptions: { pattern : 'dd-MM-yyyy' } }" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Distributore" sortProperty="Distributore">
                                    <Label text="{i18n>lbl.Distributore}"/>
                                    <t:template>
                                        <Input value="{Distributore}" editable="true"/>
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="DescrizioneDistributore" sortProperty="DescrizioneDistributore">
                                    <Label text="{i18n>lbl.DescrizioneDistributore}"/>
                                    <t:template>
                                        <Text text="{DescrizioneDistributore}"/>
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Committente" sortProperty="Committente">
                                    <Label text="{i18n>lbl.Committente}"/>
                                    <t:template>
                                        <Text text="{Committente}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="DescrizioneCommittente" sortProperty="DescrizioneCommittente">
                                    <Label text="{i18n>lbl.DescrizioneCommittente}"/>
                                    <t:template>
                                        <Text text="{DescrizioneCommittente}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="DestinatarioMerci" sortProperty="DestinatarioMerci">
                                    <Label text="{i18n>lbl.DestinatarioMerci}"/>
                                    <t:template>
                                        <Text text="{DestinatarioMerci}"/>
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="DescrizioneDestinatarioMerci" sortProperty="DescrizioneDestinatarioMerci">
                                    <Label text="{i18n>lbl.DescrizioneDestinatarioMerci}"/>
                                    <t:template>
                                        <Text text="{DescrizioneDestinatarioMerci}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="DataOrdineCliente" sortProperty="DataOrdineCliente">
                                    <Label text="{i18n>lbl.DataOrdineCliente}"/>
                                    <t:template>
                                        <Text  text ="{ path:'DataOrdineCliente', type:'sap.ui.model.type.Date', formatOptions: { pattern : 'dd-MM-yyyy' } }" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="DataConsegnaMerce" sortProperty="DataConsegnaMerce">
                                    <Label text="{i18n>lbl.DataConsegnaMerce}"/>
                                    <t:template>
                                        <Text  text ="{ path:'DataConsegnaMerce', type:'sap.ui.model.type.Date', formatOptions: { pattern : 'dd-MM-yyyy' } }" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="PosizioneOrdine" sortProperty="PosizioneOrdine">
                                    <Label text="{i18n>lbl.PosizioneOrdine}"/>
                                    <t:template>
                                        <Text text="{PosizioneOrdine}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Materiale" sortProperty="Materiale">
                                    <Label text="{i18n>lbl.Materiale}"/>
                                    <t:template>
                                        <Input value="{Materiale}" editable="true"/>
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="DescrizioneMateriale" sortProperty="DescrizioneMateriale">
                                    <Label text="{i18n>lbl.DescrizioneMateriale}"/>
                                    <t:template>
                                        <Text text="{DescrizioneMateriale}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Quantita" sortProperty="Quantita">
                                    <Label text="{i18n>lbl.Quantita}"/>
                                    <t:template>
                                        <Input value="{Quantita}" editable="true"/>
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="UDM" sortProperty="UDM">
                                    <Label text="{i18n>lbl.UDM}"/>
                                    <t:template>
                                        <Input value="{UDM}" editable="true"/>
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Note" sortProperty="Note">
                                    <Label text="{i18n>lbl.Note}"/>
                                    <t:template>
                                        <Text text="{Note}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="StatoElaborazione" sortProperty="StatoElaborazione">
                                    <Label text="{i18n>lbl.StatoElaborazione}"/>
                                    <t:template>
                                        <Text text="{StatoElaborazione}" />
                                    </t:template>
                                </t:Column>
                            </t:columns>
                        </t:Table>
                        <FlexBox fitContainer="true" alignItems="Center" justifyContent="Center">
                            <Label text="{i18n>lbl.ContoDeposito}"/>
                        </FlexBox>
                        <FlexBox alignItems="Center" justifyContent="Center">
                            <OverflowToolbar>
                                <Button id="CreaOrdine" text="Crea Ordine" press="onCreaOrdine">
                                    <layoutData>
                                        <OverflowToolbarLayoutData shrinkable="true"
                                                    minWidth = "50px"/>
                                    </layoutData>
                                </Button>
                                <ToolbarSpacer width="135px"/>
                                <Button id="ConsegnaUscitaMerci" text="Consegna e Uscita Merci" press="onConsegnaUscitaMerci">
                                    <layoutData>
                                        <OverflowToolbarLayoutData shrinkable="true"
                                                    minWidth = "50px"/>
                                    </layoutData>
                                </Button>
                            </OverflowToolbar>
                        </FlexBox>
                        <FlexBox fitContainer="true" alignItems="Center" justifyContent="Center">
                            <Label text="{i18n>lbl.Rifatturazione}"/>
                        </FlexBox>
                        <FlexBox alignItems="Center" justifyContent="Center">
                            <OverflowToolbar>
                                <Button id="CreaReso" text="Crea Reso" press="onCreaReso">
                                    <layoutData>
                                        <OverflowToolbarLayoutData shrinkable="true"
                                                    minWidth = "10px"/>
                                    </layoutData>
                                </Button>
                                <ToolbarSpacer width="135px"/>
                                <Button id="ConsegnaEntrataMerci" text="Consegna e Entrata Merci" press="onConsegnaEntrataMerci">
                                    <layoutData>
                                        <OverflowToolbarLayoutData shrinkable="true"
                                                    minWidth = "10px"/>
                                    </layoutData>
                                </Button>
                                <ToolbarSpacer width="135px"/>
                                <Button id="CreaOrdineRifatturazione" text="Crea Ordine" press="onCreaOrdineRifatturazione">
                                    <layoutData>
                                        <OverflowToolbarLayoutData shrinkable="true"
                                                    minWidth = "10px"/>
                                    </layoutData>
                                </Button>
                                <ToolbarSpacer width="135px"/>
                                <Button id="ConsegnaUscitaMerciRifatturazione" text="Consegna e Uscita Merci" press="onConsegnaUscitaMerciRifatturazione">
                                    <layoutData>
                                        <OverflowToolbarLayoutData shrinkable="true"
                                                    minWidth = "10px"/>
                                    </layoutData>
                                </Button>
                            </OverflowToolbar>
                        </FlexBox>
                    </VBox>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
